<div class='meta'>
  <p>
    <small class='published-on'><%= t(".published_on", publish_date_and_time: display_date(article.published_at), by: "<span class='p-author h-card'>#{article.user.nickname}</span>") %></small>
    <% if article.tags.present? %>
      <div class='article-tags'>
        <% article.tags.map { |tag| link_to tag.display_name, tag.permalink_url(nil, true), :rel => "tag", class: 'tag'}.sort.each do |tag_link| %>
          <%= tag_link %>
        <% end %>
      </div>
    <% end %>
  </p>
</div>
